<div class="container py-3">
  <h1> Dashboard </h1>

    <% @bills&.each do |bill| %>
      <div class="row my-3">
        <div class="col-4 d-flex align-items-center">
          <h3><%= bill.category %></h3>
        </div>

        <div class="col-8 d-flex justify-content-around align-items-center" >
        <% bill.flat.users.each do |user| %>
            <% if Transaction.find_by(user: user , bill: bill ) || bill.user == user %>
                <%= image_tag "#{user.avatar}", class: "avatar-green" %>
            <% else %>
                <%= link_to bill_path(bill, user: user) do %>
                <%= image_tag "#{user.avatar}", class: "avatar" %>
                <% end %>
            <% end %>
          <% end %>

        </div>
     </div>
    <% end %>

  <div class="d-flex justify-content-center fixed-bottom">
    <%= link_to "Ajouter une facture", categories_path, class: "bigbutton"%>
  </div>
</div>
