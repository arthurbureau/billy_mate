<div class="container">

<h2>Connecte toi!</h2>
<br>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: false, :placeholder => 'E-mail',
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password, label: false, :placeholder => 'Mot de passe',
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, :label => 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="bigbutton btn-lg">
    <%= f.button :submit, "Se connecter" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
